- if flash.notice
  .container
    %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", type: "button"} ×
    .alert.alert-dismissable= flash.notice
- elsif flash.alert
  .container
    %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", type: "button"} ×
    .alert.alert-error.alert-dismissable= flash.alert